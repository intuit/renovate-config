{
  "name": "@intuit/renovate-config",
  "version": "1.2.4",
  "author": "David Aghassi <david_aghassi@intuit.com>",
  "license": "MIT",
  "repository": {
    "url": "git@github.com:intuit/renovate-config.git",
    "type": "git"
  },
  "publishConfig": {
    "access": "public"
  },
  "renovate-config": {
    "default": {
      "extends": [
        ":separateMajorReleases",
        ":combinePatchMinorReleases",
        ":ignoreUnstable",
        ":prImmediately",
        ":renovatePrefix",
        ":updateNotScheduled",
        ":ignoreModulesAndTests",
        ":maintainLockFilesDisabled",
        ":autodetectPinVersions",
        ":prConcurrentLimit20",
        "group:monorepos",
        "helpers:disableTypesNodeMajor",
        "helpers:oddIsUnstablePackages",
        ":automergeDigest",
        ":automergePatch",
        ":pinAllExceptPeerDependencies",
        ":semanticPrefixFixDepsChoreOthers",
        "docker:enableMajor"
      ],
      "masterIssue": true,
      "unicodeEmoji": true,
      "separateMinorPatch": true,
      "semanticCommits": true,
      "respectLatest": true,
      "updateLockFiles": true,
      "prHourlyLimit": 0,
      "prConcurrentLimit": 0,
      "prBodyColumns": [
        "Package",
        "Update",
        "Type",
        "Change",
        "Package file",
        "References"
      ],
      "labels": [
        "dependency-update"
      ],
      "patch": {
        "labels": [
          "patch",
          "automerge",
          "dependency-update"
        ]
      },
      "minor": {
        "labels": [
          "minor",
          "dependency-update"
        ]
      },
      "major": {
        "labels": [
          "major",
          "dependency-update"
        ]
      },
      "digest": {
        "labels": [
          "digest",
          "automerge",
          "dependency-update"
        ]
      },
      "packageRules": [
        {
          "patch": {
            "automerge": true,
            "labels": [
              "automerge",
              "patch",
              "automerge",
              "dependency-update",
              "dev-dependency"
            ]
          },
          "minor": {
            "automerge": true,
            "labels": [
              "automerge",
              "minor",
              "dependency-update",
              "dev-dependency"
            ]
          },
          "major": {
            "labels": [
              "major",
              "dependency-update",
              "dev-dependency"
            ]
          },
          "depTypeList": [
            "devDependencies"
          ],
          "branchPrefix": "dev-dependency-renovate/"
        },
        {
          "packagePatterns": [
            "^auto",
            "^@auto-it/"
          ],
          "groupName": "auto monorepo"
        }
      ]
    }
  },
  "release": {
    "prepare": [
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  },
  "devDependencies": {
    "@semantic-release/git": "9.0.0",
    "@semantic-release/npm": "7.0.6",
    "semantic-release": "17.2.2"
  }
}
